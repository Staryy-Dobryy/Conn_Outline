@model ConnOutlineMessenger.BuisnessLogic.Models.GetFriendsModel
@{
    Layout = "ChatLayout";
    ViewData["Title"] = "Friends";
}
<style>
    body {
        overflow: hidden;
    }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="text-center">
    <div class="conn-header conn-bg-dark">
        <h1>YOUR FRIENDS</h1>
    </div>
    <div id="chats-content" class="conn-scroll">
        @if (Model.Friends == null || Model.Friends.Count == 0)
        {
            <div id="chats-item">
                <h4 align="center">У вас пока нету друзей</h4>
            </div>
        }
        else
        {
            @foreach (var friend in Model.Friends)
            {
                <div class="loaded-chat">
                    <div class="chats-item" id="@friend.Id">
                        <img src="~/images/user-icon.png">
                        <h5>@friend.UserName</h5>
                    </div>
                    <input type="button" class="delete-btn" id="@friend.Id" value="delete" onclick="deleteChat(this)">
                </div>
            }
        }
    </div>
</div>