@model ConnOutlineMessenger.DTO.RegistrationViewModel

@{
    Layout = "AccountLayout";
    ViewData["Title"] = "Registration";
}
<link rel="stylesheet" href="~/css/animatedBackground.css">
<link rel="stylesheet" href="~/css/account/registration.css">
<ul class="circles">
    <li></li>
